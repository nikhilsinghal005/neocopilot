{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@features/*": ["features/*"],
      "@shared/*": ["shared/*"],
      "@config/*": ["config/*"],
      "@chat/*": ["features/chat/*"],
      "@state/*": ["features/chat/state/*"]
    }
  },
  "include": ["src", "vite.config.ts", "src/shared/types/custom-modules.d.ts"],
  "exclude": ["node_modules", "dist", "out"]
}
